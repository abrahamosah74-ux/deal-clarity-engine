# ========================================
# DEAL CLARITY ENGINE - PRODUCTION CONFIG
# ========================================

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com
APP_NAME=Deal Clarity Engine
APP_VERSION=1.0.0

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dealclarity?retryWrites=true&w=majority
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Paystack (Nigeria)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key
PAYSTACK_MONTHLY_PLAN=PLN_monthly_plan_code
PAYSTACK_YEARLY_PLAN=PLN_yearly_plan_code

# Google OAuth (Calendar & Gmail)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Microsoft OAuth (Outlook & Calendar)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=https://yourdomain.com/auth/microsoft/callback

# Salesforce OAuth
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=https://yourdomain.com/auth/salesforce/callback
SALESFORCE_INSTANCE_URL=https://yourdomain.my.salesforce.com

# HubSpot OAuth
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=https://yourdomain.com/auth/hubspot/callback

# Email (SMTP Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=Deal Clarity <noreply@dealclarity.com>

# File Uploads
MAX_FILE_SIZE=52428800 # 50MB
UPLOAD_DIR=./uploads

# Call Recording Services (Optional)
GONG_API_KEY=your_gong_api_key
CHORUS_API_KEY=your_chorus_api_key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
FEATURE_TRANSCRIPT_PROCESSING=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_TEAM_COLLABORATION=true
